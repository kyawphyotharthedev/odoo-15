                    <group>
                        <group>
                            <separator string="Classification Group"/>
                            <field name='cate_group_id'/>
                            <field name='cate_sector_id' domain="[('left_id','=',cate_group_id)]"
                                   context="{'default_left_id': cate_group_id}"/>

                            <field name='sale_item_categ_id'/>

                            <field name='cate_line_id' domain="[('left_id','=',cate_sector_id)]"
                                   context="{'default_left_id': cate_sector_id}"/>

                            <field name='cate_particular_id' domain="[('left_id','=',cate_line_id)]"
                                   context="{'default_left_id': cate_line_id}"/>

                            <field name='cate_function_id' domain="[('left_id','=',cate_particular_id)]"
                                   context="{'default_left_id': cate_particular_id}"/>

                            <field name='cate_option_id' domain="[('left_id','=',cate_function_id)]"
                                   context="{'default_left_id': cate_function_id}"/>
                            <field name="display_type"/>
                        </group>
                        <group>
                            <separator string=""/>
                            <field name="customer_name" attrs="{'invisible': [('is_innovative', '=', False)]}"/>
                            <field name="is_innovative" invisible='1'/>

