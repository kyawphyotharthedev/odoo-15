                        <div>
                            <field name="is_manual_item"/>
                            <label for="is_manual_item" string="Manual Item"/>
                        </div>
                    </div>
                </span>
            </xpath>
            <notebook position='inside'>
                <page string="Sale Item Identify" name="sale_item_identify"
