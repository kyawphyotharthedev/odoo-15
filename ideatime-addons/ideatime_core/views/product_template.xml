<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ideatime_product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field eval="7" name="priority"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="image_128" widget="image" string="Photo"/>
                <field name="display_type"/>
            </field>
            <xpath expr='//tree' position='attributes'>
                <attribute name="delete">false</attribute>
            </xpath>
        </field>
    </record>
    <record id="ideatime_product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field eval="7" name="priority"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="image_128" widget="image" string="Photo"/>
                <field name="display_type"/>
            </field>
            <xpath expr='//tree' position='attributes'>
                <attribute name="delete">false</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_product_form_delete_action" model="ir.ui.view">
        <field name="name">product.product.form.delete.action</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr='//form' position='attributes'>
                <attribute name="delete">false</attribute>
            </xpath>
        </field>
    </record>
    <record id="ideatime_product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">


            <field name='barcode' position='after'>
                <separator string=""/>
                <field name='product_intro'/>
                <field name='product_spec'/>
            </field>
            <xpath expr="//field[@name='attribute_line_ids']/tree" position="after">
                <form>
                    <group>
                        <field name="attribute_id"/>
                    </group>
                    <group>
                        <field name="value_ids" widget="many2many" options="{'no_create_edit': True}"
                               domain="[('attribute_id', '=', attribute_id)]"
                               context="{'default_attribute_id': attribute_id}"/>
                    </group>
                </form>
            </xpath>
            <xpath expr="//field[@name='attribute_line_ids']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath>
            <xpath expr='//form' position='attributes'>
                <attribute name="delete">false</attribute>
            </xpath>
        </field>
    </record>

